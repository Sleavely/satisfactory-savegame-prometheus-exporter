{
  "compilerOptions": {
      "lib": ["es2022"],
      "module": "commonjs",
      "target": "es2022",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,

      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "dist"
    },

    "include": [
      "bin/",
      "src/"
    ]
  }
